import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: '고등학교 시간표',
      theme: ThemeData(
        primarySwatch: Colors.blue,
      ),
      home: TimetablePage(),
    );
  }
}

class TimetablePage extends StatefulWidget {
  @override
  _TimetablePageState createState() => _TimetablePageState();
}

class _TimetablePageState extends State<TimetablePage> {
  List<List<String>> timetable = List.generate(8, (i) => List.generate(6, (j) => ''));

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('고등학교 시간표'),
      ),
      body: Column(
        children: <Widget>[
          _buildHeaderRow(),
          Expanded(
            child: _buildTimetable(),
          ),
        ],
      ),
    );
  }

  Widget _buildHeaderRow() {
    return Row(
      children: <Widget>[
        _buildHeaderCell(''),
        _buildHeaderCell('월'),
        _buildHeaderCell('화'),
        _buildHeaderCell('수'),
        _buildHeaderCell('목'),
        _buildHeaderCell('금'),
      ],
    );
  }

  Widget _buildHeaderCell(String label) {
    return Expanded(
      child: Container(
        padding: EdgeInsets.all(8.0),
        color: Colors.grey[300],
        child: Center(child: Text(label, style: TextStyle(fontWeight: FontWeight.bold))),
      ),
    );
  }

  Widget _buildTimetable() {
    return GridView.builder(
      gridDelegate: SliverGridDelegateWithFixedCrossAxisCount(crossAxisCount: 6),
      itemCount: 8 * 6,
      itemBuilder: (context, index) {
        int row = index ~/ 6;
        int col = index % 6;

        if (col == 0) {
          return Container(
            padding: EdgeInsets.all(8.0),
            color: Colors.grey[300],
            child: Center(child: Text('${row + 1}교시', style: TextStyle(fontWeight: FontWeight.bold))),
          );
        } else {
          return GestureDetector(
            onTap: () {
              _editCell(row, col - 1);
            },
            child: Container(
              margin: EdgeInsets.all(1.0),
              color: Colors.white,
              child: Center(child: Text(timetable[row][col - 1])),
            ),
          );
        }
      },
    );
  }

  void _editCell(int row, int col) {
    TextEditingController controller = TextEditingController(text: timetable[row][col]);

    showDialog(
      context: context,
      builder: (context) {
        return AlertDialog(
          title: Text('수업 내용 입력'),
          content: TextField(
            controller: controller,
            decoration: InputDecoration(hintText: '수업 내용을 입력하세요'),
          ),
          actions: <Widget>[
            TextButton(
              child: Text('취소'),
              onPressed: () {
                Navigator.of(context).pop();
              },
            ),
            TextButton(
              child: Text('저장'),
              onPressed: () {
                setState(() {
                  timetable[row][col] = controller.text;
                });
                Navigator.of(context).pop();
              },
            ),
          ],
        );
      },
    );
  }
}
